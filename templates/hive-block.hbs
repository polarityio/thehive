              <button class='confirm-edit-modal-btn' type='button' {{action 'submitUpdate' case index}}>
                {{#if isRunning}}
                  {{fa-icon 'spinner-third' fixedWidth=true spin=true}}
                {{/if}}
                Submit
              </button>
            </div>
          </div>
        </div>
      {{/if}}
    {{/each}}
  {{/if}}

